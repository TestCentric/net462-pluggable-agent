<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<RootNamespace>TestCentric.agent</RootNamespace>
		<TargetFrameworks>net462</TargetFrameworks>
		<GenerateSupportedRuntime>false</GenerateSupportedRuntime>
		<OutputPath>..\..\bin\$(Configuration)\agent\</OutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<ApplicationIcon>..\testcentric.ico</ApplicationIcon>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<AssemblyTitle>Net462 Pluggable Agent</AssemblyTitle>
		<Description>Pluggable Agent for running tests under .NET 4.6.2</Description>
		<Copyright>Copyright (c) 2021-2023 Charlie Poole</Copyright>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\*.cs" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="..\AssemblyInfo.cs" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Include="..\TextOutput\ColorConsole.cs" Link="TextOutput\ColorConsole.cs" />
	  <Compile Include="..\TextOutput\ColorConsoleWriter.cs" Link="TextOutput\ColorConsoleWriter.cs" />
	  <Compile Include="..\TextOutput\ColorStyle.cs" Link="TextOutput\ColorStyle.cs" />
	  <Compile Include="..\TextOutput\ExtendedTextWrapper.cs" Link="TextOutput\ExtendedTextWrapper.cs" />
	  <Compile Include="..\TextOutput\ExtendedTextWriter.cs" Link="TextOutput\ExtendedTextWriter.cs" />
	</ItemGroup>
	
	<ItemGroup>
		<Reference Include="System.Runtime.Remoting" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="NUnit.Engine.Api" Version="3.16.2" />
		<PackageReference Include="TestCentric.Engine.Core" Version="2.0.0-dev00001" />
	</ItemGroup>
	
	<ItemGroup>
		<Content Include="..\testcentric.ico" />
		<Content Include="..\app.config" />
	</ItemGroup>
	
	<ItemGroup>
	  <Folder Include="TextOutput\" />
	</ItemGroup>

</Project>
