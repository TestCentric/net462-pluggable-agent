<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<RootNamespace>TestCentric.agent</RootNamespace>
		<TargetFrameworks>net462</TargetFrameworks>
		<GenerateSupportedRuntime>false</GenerateSupportedRuntime>
		<OutputPath>..\..\bin\$(Configuration)\agent\</OutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<ApplicationIcon>testcentric.ico</ApplicationIcon>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<AssemblyTitle>Net462 Pluggable Agent</AssemblyTitle>
		<Description>Pluggable Agent for running tests under .NET 4.6.2</Description>
		<Copyright>Copyright (c) 2021-2023 Charlie Poole</Copyright>
	</PropertyGroup>

	<PropertyGroup>
		<EngineCoreVersion>2.0.0-dev00025</EngineCoreVersion>	
	</PropertyGroup>
	
	<ItemGroup>
		<Reference Include="System.Runtime.Remoting" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="TestCentric.Agent.Core" Version="2.0.0-dev00019" />
		<PackageReference Include="TestCentric.Engine.Api" Version="2.0.0-dev00003" />
		<PackageReference Include="TestCentric.Extensibility" Version="3.0.0-dev00017" />
		<PackageReference Include="TestCentric.Metadata" Version="3.0.1" />
		<PackageReference Include="TestCentric.InternalTrace" Version="1.2.0-dev00011" />
	</ItemGroup>

</Project>
